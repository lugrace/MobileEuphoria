<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/resultsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="64sp"
            android:text="@string/no_name"
            android:gravity="center"
            android:paddingBottom="20dp"/>

        <TextView
            android:id="@+id/happinessLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/happiness_index"
            android:gravity="center"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/happinessIndex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calculating"
            android:gravity="center"
            android:textSize="32sp"
            android:paddingBottom="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/negative_tweets"
                android:gravity="center"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/positive_tweets"
                android:gravity="center"
                android:paddingBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/negativeP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/calculating"
                android:gravity="center"/>

            <TextView
                android:id="@+id/positiveP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/calculating"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>